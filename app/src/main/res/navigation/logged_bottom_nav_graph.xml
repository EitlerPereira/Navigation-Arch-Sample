<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logged_bottom_nav_graph"
    app:startDestination="@id/action_home">

    <fragment
        android:id="@+id/action_home"
        android:name="com.pedropereira.navigationsample.fragment.logged.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >

        <argument
            android:name="title"
            android:defaultValue="@string/title_home" />

    </fragment>

    <fragment
        android:id="@+id/action_service"
        android:name="com.pedropereira.navigationsample.fragment.logged.ServicesFragment"
        android:label="@string/title_service"
        tools:layout="@layout/fragment_services" >

        <argument
            android:name="title"
            android:defaultValue="@string/title_service" />

    </fragment>

    <fragment
        android:id="@+id/action_account"
        android:name="com.pedropereira.navigationsample.fragment.logged.AccountFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account" >

        <argument
            android:name="title"
            android:defaultValue="@string/title_account" />

    </fragment>
</navigation>